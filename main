package br.edu.fatecpg.atvLumine.view;

import br.edu.fatecpg.atvLumine.model.Carro;
import br.edu.fatecpg.atvLumine.model.ContaBancaria;
import br.edu.fatecpg.atvLumine.model.Produto;

public class Main {
    public static void main(String[] args) {

        // ----- CARRO -----
        Carro meuCarro = new Carro("Renault", "Logan", 2014, 50);
        meuCarro.setAno(2020);

        System.out.println("Modelo do carro: " + meuCarro.getModelo());
        System.out.println("Marca do carro: " + meuCarro.getMarca());

        meuCarro.ligar();
        meuCarro.acelerar();

        double valorTotal = meuCarro.calcularValorTanque(5.80);
        System.out.println("Valor total para encher o tanque: R$" + valorTotal);

        // ----- CONTA BANCÁRIA -----
        ContaBancaria conta = new ContaBancaria("João");
        conta.depositar(500);
        conta.sacar(200);
        conta.sacar(400);
        System.out.println("Saldo final: R$" + conta.getSaldo());

        // ----- PRODUTO -----
        Produto produto = new Produto("Notebook", 3500.00, 10);
        System.out.println("Produto: " + produto.getNome() + " - Preço: R$" + produto.getPreco() + " - Estoque: " + produto.getQuantidadeEstoque());

        produto.setPreco(-50);
        produto.setQuantidadeEstoque(-10);
        produto.setPreco(2800);
        produto.setQuantidadeEstoque(5);

        System.out.println("Produto atualizado: " + produto.getNome() + " - Preço: R$" + produto.getPreco() + " - Estoque: " + produto.getQuantidadeEstoque());
    }
}
